{
    "name": "@tinkoff/ng-dompurify",
    "version": "1.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "test": "ng test --browsers ChromeHeadless --watch=false --code-coverage",
        "test:ci": "npm run test && npm run coveralls",
        "test:watch": "ng test --browsers ChromeHeadless --watch=true --code-coverage",
        "coveralls": "cat coverage/angular-contenteditable-accessor/lcov.info | coveralls",
        "lint": "ng lint",
        "typecheck": "tsc --noEmit --skipLibCheck"
    },
    "description": "Inclusive angular api for dompurify",
    "keywords": ["angular", "ng", "dompurify", "DomSanitizer", "tinkoff"],
    "license": "Apache-2.0",
    "authors": ["Roman Sedov <r.sedov@tinkoff.ru>", "Alex Inkin <a.inkin@tinkoff.ru>"],
    "repository": "https://github.com/TinkoffCreditSystems/ng-dompurify",
    "bugs": "https://github.com/TinkoffCreditSystems/ng-dompurify/issues",
    "homepage": "https://github.com/TinkoffCreditSystems/ng-dompurify#README",
    "dependencies": {
        "@angular/animations": "~8.0.0",
        "@angular/common": "~8.0.0",
        "@angular/compiler": "~8.0.0",
        "@angular/core": "~8.0.0",
        "@angular/forms": "~8.0.0",
        "@angular/platform-browser": "~8.0.0",
        "@angular/platform-browser-dynamic": "~8.0.0",
        "@angular/router": "~8.0.0",
        "dompurify": "^1.0.11",
        "rxjs": "~6.4.0",
        "tslib": "^1.9.0",
        "zone.js": "~0.9.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.800.6",
        "@angular-devkit/build-ng-packagr": "~0.800.6",
        "@angular/cli": "~8.0.1",
        "@angular/compiler-cli": "~8.0.0",
        "@angular/language-service": "~8.0.0",
        "@tinkoff/linters": "^0.3.0",
        "@types/dompurify": "0.0.32",
        "@types/jasmine": "~3.3.8",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "~8.9.4",
        "codelyzer": "^5.0.0",
        "coveralls": "^3.0.5",
        "husky": "^2.7.0",
        "jasmine-core": "~3.4.0",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~4.1.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "^2.0.5",
        "karma-jasmine": "~2.0.1",
        "karma-jasmine-html-reporter": "^1.4.0",
        "lint-staged": "^8.2.1",
        "ng-packagr": "^5.1.0",
        "prettier": "^1.18.2",
        "ts-node": "~7.0.0",
        "tsickle": "^0.35.0",
        "tslint": "~5.15.0",
        "typescript": "~3.4.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run typecheck"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,ts,html,md,less,json}": ["prettier --write", "git add"],
            "*.ts": "tslint"
        }
    }
}
